# Variables d'environnement pour NikahScore
# Copier ce fichier en .env.local et remplir les vraies valeurs

# ==============================================
# DATABASE - SUPABASE
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================
# AUTHENTICATION
# ==============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# ==============================================
# PAYMENT - STRIPE
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Prix Stripe (Product IDs)
STRIPE_PRICE_PREMIUM=price_premium_id
STRIPE_PRICE_UNLIMITED=price_unlimited_id

# ==============================================
# EMAIL SERVICE - RESEND
# ==============================================
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@nikahscore.com

# ==============================================
# APPLICATION
# ==============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=NikahScore

# ==============================================
# ANALYTICS (optionnel)
# ==============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
HOTJAR_ID=your_hotjar_id

# ==============================================
# MONITORING (optionnel)
# ==============================================
SENTRY_DSN=your_sentry_dsn

# ==============================================
# SMS (optionnel pour invitations SMS)
# ==============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# ==============================================
# DÉVELOPPEMENT LOCAL
# ==============================================
# Pour le développement, vous pouvez utiliser ces valeurs
NODE_ENV=development
PORT=3000
